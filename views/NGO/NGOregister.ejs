<% layout('layouts/boilerplate')%>
<style>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400;500;600;700&display=swap");

  * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
  }

  header {
      /* background-image: url(search.jpg); */
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: 100% 100%;
  }

  .menu-bar {
      background-color: #141d28;
      height: 80px;
      width: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0 5%;
      z-index: 1;
      position: relative;
  }

  .logo {
      color: white;
      font-size: 30px;
      font-family: sans-serif;
  }

  .logo span {
      color: #fc9403;
  }

  .menu-bar ul {
      list-style: none;
      display: flex;
  }

  .menu-bar ul li {
      padding: 10px 30px;
      position: relative;
  }

  .menu-bar ul li a {
      font-size: 20px;
      color: white;
      text-decoration: none;

      transition: all 0.3s;
  }

  .button {
      padding: 6px 24px;
      border: 2px solid #fff;
      background: transparent;
      color: white;
      border-radius: 6px;
      cursor: pointer;
  }

  .button:active {
      transform: scale(0.98);
  }

  .menu-bar ul li a:hover {
      color: #fc9403;
  }

  .fas {
      float: right;
      margin-left: 10px;
      padding-top: 3px;
  }

  .dropdown-menu {
      display: block;
      position: absolute;
      left: 0;
      top: 100%;
      background-color: #141d28;
  }

  .dropdown-menu ul {
      display: block;
      margin: 10px;
  }

  .dropdown-menu ul li {
      padding: 10px;
      width: 150px;
  }

  .menu-bar ul li:hover .dropdown-menu {
      display: block;
      position: absolute;
      left: 0;
      top: 100%;
      background-color: #141d28;
  }

  .menu-bar ul li:hover .dropdown-menu ul {
      display: block;
      margin: 10px;
  }

  .menu-bar ul li:hover .dropdown-menu ul li {
      width: 150px;
      padding: 10px;
  }

  .dropdown-menu {
      display: none;
  }

  .dropdown-menu ul li:hover .dropdown-menu-1 {
      display: block;
      position: relative;
      left: 150px;
      top: 0;
      background-color: black;
  }

  .home {
      position: relative;
      height: 700px;
      width: 100%;
      /* background-image: url(pic.jpg); */
      background-repeat: repeat;
      background-size: 100% 100%;
      background-position: center;
  }


  .home::before {
      content: "";
      position: absolute;
      height: 100%;
      width: 100%;
      background-color: rgba(0, 0, 0, 0.6);
      z-index: 100;
      opacity: 0;
      pointer-events: none;
      transition: all 0.5s ease-out;
  }

  .home.show::before {
      opacity: 1;
      pointer-events: auto;
  }

  .wrapper {
      position: relative;
      max-width: 530px;
      width: 100%;
      height: 95%;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(1.2);
      z-index: 101;
      background: #fff;
      padding: 25px;
      border-radius: 12px;
      box-shadow: rgba(0, 0, 0, 0.1);
      opacity: 0;
      pointer-events: none;
      transition: all 0.4s ease-out;
  }


  /* width: calc(100% / 2 - 20px); */

  .home.show .wrapper {
      opacity: 1;
      pointer-events: auto;
      transform: translate(-50%, -50%) scale(1);
  }

  .wrapper h2 {
      font-size: 22px;
      color: #0b0217;
      text-align: center;
  }


  .form_close {
      position: absolute;
      top: 10px;
      right: 20px;
      color: #0b0217;
      font-size: 22px;
      opacity: 0.7;
      cursor: pointer;
  }

  .col-1 {
      max-width: 210px;
      float: left;
  }

  .col-2 {
      max-width: 210px;
      float: right;
  }

  .mb-3 {
      position: relative;
      margin-top: 20px;
      width: 100%;
      height: 40px;

  }

  .mb--3 {

      margin-top: 20px;
  }

  .mb-3 input {
      height: 100%;
      width: 100%;
      border: none;
      outline: none;
      padding: 0 30px;
      color: #333;
      transition: all 0.2s ease;
      border-bottom: 1.5px solid #aaaaaa;
  }

  .mb-3 input:focus {
      border-color: #fc9403;
  }

  .mb-3 i {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      font-size: 20px;
      color: #707070;
  }

  .mb-3 i.email,
  .mb-3 i.password {
      left: 0;
  }

  .mb-3 input:focus~i.email,
  .mb-3 input:focus~i.password {
      color: #fc9403;
  }

  .mb-3 i.pw_hide {
      right: 0;
      font-size: 18px;
      cursor: pointer;
  }


  .option_field {
      margin-top: 14px;
      display: flex;
      align-items: center;
      justify-content: space-between;
  }

  .form-check {
      margin-top: 3px;
      display: flex;
      column-gap: 8px;
      white-space: nowrap;
  }

  .form-check1 {
      margin-top: 8px;
      display: flex;
      column-gap: 8px;
      white-space: nowrap;
  }


  .wrapper a:hover {
      text-decoration: underline;
  }



  .form-check,
  .form-check1 input {
      accent-color: #fc9403;
  }

  .form-check,
  .form-check1 label {
      font-size: 12px;
      cursor: pointer;
      user-select: none;
      color: #0b0217;
  }


  .wrapper .button {
      background: #fc9403;
      margin-top: 30px;
      width: 100%;
      padding: 10px 0;
      border-radius: 10px;
  }


  .login_form {
      display: none;
  }


  .wrapper.active .signup_form {
      display: none;
  }

  .wrapper.active .login_form {
      display: block;
  }
</style>

